<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <EditText
            style="@style/Widget.AppCompat.EditText"
            android:id="@+id/url_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textUri"
            android:hint="@string/input_url_hint"
            android:ems="10"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/parse_url"
            android:importantForAutofill="no"/>
    <Button
            style="@style/Widget.AppCompat.Button"
            android:text="@string/parse_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/parse_url"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"/>
    <LinearLayout
            android:id="@+id/parse_url_result"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/url_input"/>
    <EditText
            style="@style/Widget.AppCompat.EditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="@string/query_hint"
            android:ems="10"
            android:layout_marginStart="8dp"
            android:id="@+id/query_input"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/parse_url_result"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/parse_query"
            android:importantForAutofill="no"/>
    <Button
            style="@style/Widget.AppCompat.Button"
            android:text="@string/parse_query"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/parse_query"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/query_input"/>
    <Button
            style="@style/Widget.AppCompat.Button"
            android:text="@string/copy_from_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/copy_from_url"
            app:layout_constraintTop_toBottomOf="@+id/query_input"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <LinearLayout
            android:id="@+id/parse_query_result"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/copy_from_url"/>

</androidx.constraintlayout.widget.ConstraintLayout>